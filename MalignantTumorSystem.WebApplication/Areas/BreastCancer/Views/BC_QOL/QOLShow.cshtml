@model MalignantTumorSystem.Model.Entities.MT_BC_QOL
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>生命质量测定</title>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/PCCSC/pccsc.js"></script>
    <script src="~/Scripts/Common/matchName.show.js"></script>
    <script src="~/Scripts/MyJs/jquery.autocomplete.js"></script>
    <link href="~/Scripts/MyJs/jqueryAutocomplete/jquery.autocomplete.css" rel="stylesheet" />
    <script src="~/Scripts/MyJs/My97DatePicker/WdatePicker.js"></script>
    <script src="~/Scripts/MyJs/H-ui_v3.0/static/h-ui/js/H-ui.min.js"></script>
    <link href="~/Scripts/MyJs/H-ui_v3.0/static/h-ui/css/H-ui.min.css" rel="stylesheet" />
    <!--[if lt IE 9]>
    <link href="~/Scripts/MyJs/H-ui_v3.0/static/h-ui/css/H-ui.ie.css" rel="stylesheet" />
    <![endif]-->
</head>
<body>
    <div>
        <form id="form1"> 
            <div>
                <span style="font-size:large">@Model.name 生命质量测定结果</span>
            </div>
            <table class="table table-border table-bordered table-hover" style="margin-bottom:50px;margin-top:5px;width:80%;margin-left:10%">
                <thead class="text-c">
                    <tr>
                        <th width="50%"></th>
                        <th width="9%">条目数</th>
                        <th width="9%">自由度</th>
                        <th width="14%">条目编号</th>
                        <th width="9%">RS</th>
                        <th width="9%">S</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="text-c">
                        <td style="text-align:left">整体生活质量量表</td>
                        <td>2</td>
                        <td>6</td>
                        <td>29,30</td>
                        <td style="color:red">@Model.rs1</td>
                        <td style="color:red">@Model.s1</td>
                    </tr>
                    <tr class="text-c">
                        <td colspan="6">功能子量表</td> 
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">躯体功能</td>
                        <td>5</td>
                        <td>3</td>
                        <td>1,2,3,4,5</td>
                        <td style="color:red">@Model.rs2</td>
                        <td style="color:red">@Model.s2</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">角色功能</td>
                        <td>2</td>
                        <td>3</td>
                        <td>6,7</td>
                        <td style="color:red">@Model.rs3</td>
                        <td style="color:red">@Model.s3</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">情感功能</td>
                        <td>4</td>
                        <td>3</td>
                        <td>21,22,23,24</td>
                        <td style="color:red">@Model.rs4</td>
                        <td style="color:red">@Model.s4</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">认知功能</td>
                        <td>2</td>
                        <td>3</td>
                        <td>20,25</td>
                        <td style="color:red">@Model.rs5</td>
                        <td style="color:red">@Model.s5</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">社会功能</td>
                        <td>2</td>
                        <td>3</td>
                        <td>26,27</td>
                        <td style="color:red">@Model.rs6</td>
                        <td style="color:red">@Model.s6</td>
                    </tr>
                    <tr class="text-c">
                        <td colspan="6">症状子量表</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">疲劳</td>
                        <td>3</td>
                        <td>3</td>
                        <td>10,12,18</td>
                        <td style="color:red">@Model.rs7</td>
                        <td style="color:red">@Model.s7</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">恶心呕吐</td>
                        <td>2</td>
                        <td>3</td>
                        <td>14,15</td>
                        <td style="color:red">@Model.rs8</td>
                        <td style="color:red">@Model.s8</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">疼痛</td>
                        <td>2</td>
                        <td>3</td>
                        <td>9,19</td>
                        <td style="color:red">@Model.rs9</td>
                        <td style="color:red">@Model.s9</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">气促</td>
                        <td>1</td>
                        <td>3</td>
                        <td>8</td>
                        <td style="color:red">@Model.rs10</td>
                        <td style="color:red">@Model.s10</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">失眠</td>
                        <td>1</td>
                        <td>3</td>
                        <td>11</td>
                        <td style="color:red">@Model.rs11</td>
                        <td style="color:red">@Model.s11</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">食欲丧失</td>
                        <td>1</td>
                        <td>3</td>
                        <td>13</td>
                        <td style="color:red">@Model.rs12</td>
                        <td style="color:red">@Model.s12</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">便秘</td>
                        <td>1</td>
                        <td>3</td>
                        <td>16</td>
                        <td style="color:red">@Model.rs13</td>
                        <td style="color:red">@Model.s13</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">腹泻</td>
                        <td>1</td>
                        <td>3</td>
                        <td>17</td>
                        <td style="color:red">@Model.rs14</td>
                        <td style="color:red">@Model.s14</td>
                    </tr>
                    <tr class="text-c">
                        <td style="text-align:left">经济困难</td>
                        <td>1</td>
                        <td>3</td>
                        <td>28</td>
                        <td style="color:red">@Model.rs15</td>
                        <td style="color:red">@Model.s15</td>
                    </tr>
                    <tr>
                        <td style="text-align:right" colspan="6">
                            医师<input type="text" class="input-text radius size-S" style="width:100px" id="doctor" name="doctor" value="@Model.doctor">
                            日期 @Html.TextBox("checkdate",string.Format("{0:yyyy-MM-dd}",Model.checkdate),new { @class= "input-text radius size-S", style = "width:100px" })
                            @*<input type="text" id="checkdate" name="checkdate" class="input-text radius size-S" style="width:100px" onclick="WdatePicker({ dataFmt: 'yyyy-MM-dd', maxDate: '%y-%M-%d', position: { left: -20 }})" value="@Model.checkdate">*@
                        </td>
                    </tr>
                </tbody>

            </table>
        </form>
    </div>
</body>
</html>
